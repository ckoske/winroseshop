#cont([ngClass]="isMain ? 'pt-5' : ''")
    #title-cont 
        h3.font-weight-light([ngClass]="isMain ? 'text-uppercase' : 'text-capitalize'") {{ category || 'Items' }}
        hr
    #items-cont
        .card.rounded-0.border-0(*ngFor='let item of items')
            img.rounded-0.card-img-top(src='{{item.image}}')
            .card-body.pr-0.pl-0.pb-0
                .card-title.mb-0.font-weight-bold {{item.name}}
                .card-text.text-muted.font-weight-light {{item.price | currency:'Kshs. ':'symbol':'3.2-2'}}
